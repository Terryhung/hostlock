{
  "manifest_version": 3,
  "name": "HostLock",
  "version": "1.0.1",
  "description": "Monitor site usage and block distracting websites",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "icon128.png"],
      "matches": ["<all_urls>"]
    }
  ]
}

